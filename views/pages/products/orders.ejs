<!-- Top Section -->
<div class="row">
    <div class="col-12 justify-content-md-between d-md-flex">
        <h5 class="title text-uppercase mb-0">orders</h5>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item text-capitalize active" aria-current="page">
                    <a href="/products">ecommerce</a>
                </li>
                <li class="breadcrumb-item text-capitalize" aria-current="page">
                    orders
                </li>
            </ol>
        </nav>
    </div>
</div>

<!-- Middle Section or Content -->

<div class="row products-orders mb-3">
    <div class="col-lg-12">
        <div class="card rounded shadow border-0 ">
            <div class="card-body rounded-bottom rounded-1">
                <!-- Header Orders -->
                <div class="row mb-2 align-items-center">
                    <div class="col-sm-7">
                        <div class="search-box d-inline-block">
                            <div class="input-group input-group-sm d-flex">
                                <button class="btn border-0 anm-riple bg-primary" type="button" id="search"><i
                                        class="fas fa-search text-light font-xs"></i></button>
                                <input type="text" class="form-control bg-white border" placeholder="Search.."
                                    aria-label="Example text with button addon" aria-describedby="search">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-5">
                        <div class="text-sm-end">
                            <button class="btn btn-primary btn-sm anm-riple mt-2 mt-sm-0">
                                <i class="fas fa-plus me-1 font-xs"></i> Add New Order
                            </button>
                        </div>
                    </div>
                </div>
                <!-- Content Orders -->
                <div class="table-responsive">
                    <table class="table align-middle table-nowrap">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 20px;" class="align-middle">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="checkAll">
                                        <label class="form-check-label" for="checkAll"></label>
                                    </div>
                                </th>
                                <th class="align-middle">Order ID</th>
                                <th class="align-middle">Billing Name</th>
                                <th class="align-middle">Date</th>
                                <th class="align-middle">Total</th>
                                <th class="align-middle">Payment Status</th>
                                <th class="align-middle">Payment Method</th>
                                <th class="align-middle">View Details</th>
                                <th class="align-middle">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for( let index = 0; index < 15; index++ ) { %>
                            <tr>
                                <td>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox"
                                            id="orderidcheck<%= index + 1 %>">
                                        <label class="form-check-label" for="orderidcheck<%= index + 1 %>"></label>
                                    </div>
                                </td>
                                <td><a href="javascript: void(0);" class="text-body fw-bold">#SK25<%= index + 40 %> </a>
                                </td>
                                <td>Amr Mohamed</td>
                                <td>
                                    <%= index + 7 %> Oct, 2019
                                </td>
                                <td>
                                    $<%= (index + 1) * 11 %>
                                </td>
                                <td>
                                    <span
                                        class="badge rounded-pill bg-<%= index % 3 == 0 ? "danger" : "success" %> font-xs"><%= index % 3 == 0 ? "chargeback" : "paid" %></span>
                                </td>
                                <td>
                                    <% if (index % 2 == 0) { %>
                                    <i class="fab fa-cc-mastercard me-1"></i> Mastercard
                                    <% } else if (index % 3 == 0) { %>

                                    <i class="fab fa-cc-visa me-1"></i> Visa

                                    <% } else { %>
                                    <i class="fab fa-cc-paypal me-1"></i> Paypal
                                    <% } %>
                                </td>
                                <td>
                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-primary font-xs btn-sm rounded-pill"
                                        data-bs-toggle="modal" data-bs-target=".orderdetailsModal">
                                        View Details
                                    </button>
                                </td>
                                <td>
                                    <div class="d-flex gap-3">
                                        <a href="javascript:void(0);" class="text-success"><i
                                                class="fas fa-pencil-alt font-sm"></i></a>
                                        <a href="javascript:void(0);" class="text-danger"><i
                                                class="fas fa-trash-alt font-sm"></i></a>
                                    </div>
                                </td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                <!-- Pagination Orders -->
                <ul class="pagination pagination-rounded mb-2 justify-content-end">
                    <li class="page-item disabled me-2">
                        <a class="page-link rounded-0"> <i class="fas fa-arrow-left"></i> </a>
                    </li>

                    <% for( let index = 0; index < 5; index++ ) { %>
                    <li class="page-item me-2 <%= index == 3 ? "active" : "" %>">
                        <a class="page-link" href="javascript: void(0);"><%= index + 1 %> </a></li>
                    <% } %>

                    <li class="page-item">
                        <a class="page-link rounded-0" href="javascript: void(0);"><i
                                class="fas fa-arrow-right"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Modals For Orders -->
<div class="modal fade orderdetailsModal" tabindex="-1" role="dialog" aria-labelledby="orderdetailsModalLabel&quot;"
    aria-modal="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="orderdetailsModalLabel&quot;">Order Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-2 font-sm">Product id: <strong class="text-primary">#SK2540</strong></p>
                <p class="mb-4 font-sm">Billing Name: <strong class="text-primary">Neal Matthews</strong></p>

                <div class="table-responsive">
                    <table class="table align-middle table-nowrap">
                        <thead class="border-bottom">
                            <tr>
                                <th scope="col">Product</th>
                                <th scope="col">Product Name</th>
                                <th scope="col">Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">
                                    <div>
                                        <img src="https://themesbrand.com/skote-django/layouts/assets/images/product/img-7.png"
                                            alt="product" class="avatar-md">
                                    </div>
                                </th>
                                <td>
                                    <div>
                                        <h6 class="text-truncate">Wireless Headphone (Black)</h6>
                                        <p class="text-muted mb-0">$ 225 x 1</p>
                                    </div>
                                </td>
                                <td>$ 255</td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    <div>
                                        <img src="https://themesbrand.com/skote-django/layouts/assets/images/product/img-4.png"
                                            alt="product" class="avatar-md">
                                    </div>
                                </th>
                                <td>
                                    <div>
                                        <h6 class="text-truncate">Hoodie (Blue)</h6>
                                        <p class="text-muted mb-0">$ 145 x 1</p>
                                    </div>
                                </td>
                                <td>$ 145</td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <h6 class="m-0 text-right">Sub Total:</h6>
                                </td>
                                <td>
                                    $ 400
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <h6 class="m-0 text-right">Shipping:</h6>
                                </td>
                                <td>
                                    Free
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <h6 class="m-0 text-right">Total:</h6>
                                </td>
                                <td>
                                    $ 400
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>