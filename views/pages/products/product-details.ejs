%>

<!-- Top Section -->
<div class="row">
    <div class="col-12 justify-content-md-between d-md-flex">
        <h5 class="title text-uppercase mb-0">product details</h5>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item text-capitalize active" aria-current="page">
                    <a href="/products">ecommerce</a>
                </li>
                <li class="breadcrumb-item text-capitalize" aria-current="page">
                    product details
                </li>
            </ol>
        </nav>
    </div>
</div>

<!-- Middle Section or Content -->

<div class="row product-details">
    <div class="col-lg-12">
        <div class="card rounded shadow border-0 mb-custom">
            <div class="card-body rounded-bottom rounded-1">
                <!-- Imgs & Abbreviation -->
                <div class="row">
                    <!-- Products Img -->
                    <div class="col-xl-6">
                        <div class="product-detail-imgs">
                            <div class="row">
                                <!-- Other Imgs -->
                                <div class="col-md-2 col-sm-3 col-4">
                                    <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist"
                                        aria-orientation="vertical">
                                        <% productImgs.forEach(product => { %>
                                        <button class="nav-link <%= product.id == 1 ? "active" : "" %>"
                                            id="product-<%= product.id %>-tab" data-bs-toggle="pill"
                                            data-bs-target="#product-<%= product.id %>" type="button" role="tab"
                                            aria-controls="product-<%= product.id %>" aria-selected="true">
                                            <img src="<%= product.src %>" class="rounded img-fluid mx-auto d-block"
                                                alt="product">
                                        </button>
                                        <% }) %>
                                    </div>
                                </div>
                                <!-- Img Preview -->
                                <div class="col-md-7 offset-md-1 col-sm-9 col-8">
                                    <div class="tab-content" id="v-pills-tabContent">
                                        <% productImgs.forEach(product => { %>
                                        <div class="tab-pane fade <%= product.id == 1 ? "active show" : "" %>"
                                            id="product-<%= product.id %>" role="tabpanel"
                                            aria-labelledby="product-<%= product.id %>-tab">
                                            <div>
                                                <img src="<%= product.src %>" class="d-block img-fluid mx-auto"
                                                    alt="product">
                                            </div>
                                        </div>
                                        <% }) %>
                                    </div>
                                    <div class="text-center">
                                        <button class="btn  bg-primary mt-2 me-sm-1 anm-riple text-white">
                                            <i class="fas fa-shopping-cart me-1 font-sm"></i>
                                            add cart
                                        </button>
                                        <button class="btn  bg-success mt-2 anm-riple text-white">
                                            <i class="fas fa-shopping-bag me-1 font-sm"></i>
                                            buy now
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Product Prices & Details etc... -->
                    <div class="col-xl-6">
                        <div class="mt-4 mt-xl-3">
                            <div class="mt-4 mt-xl-3">
                                <a href="javascript: void(0);" class="text-primary">Headphone</a>
                                <h5 class="mt-1 mb-3">Wireless Headphone (Black)</h5>
                                <p class="text-muted float-start me-3">
                                    <span class="fas fa-star text-warning"></span>
                                    <span class="fas fa-star text-warning"></span>
                                    <span class="fas fa-star text-warning"></span>
                                    <span class="fas fa-star text-warning"></span>
                                    <span class="fas fa-star"></span>
                                </p>
                                <p class="text-muted mb-2">( 152 Customers Review )</p>
                                <h6 class="text-success text-uppercase">20% Off</h6>
                                <h6 class="mb-3">Price : <span class="text-muted me-1"><del class="font-sm">$240
                                            USD</del></span>
                                    <b>$225 USD</b></h6>
                                <p class="text-muted mb-2">To achieve this, it would be necessary to have uniform
                                    grammar pronunciation and more common words If several languages coalesce</p>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div>
                                            <p class="text-muted"><i
                                                    class="fas font-sm fa-unlink align-middle text-primary me-1"></i>
                                                Wireless</p>
                                            <p class="text-muted"><i
                                                    class="fas font-sm fa-shapes align-middle text-primary me-1"></i>
                                                Wireless Range : 10m</p>
                                            <p class="text-muted"><i
                                                    class="fas font-sm fa-battery-empty align-middle text-primary me-1"></i>
                                                Battery life : 6hrs</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div>
                                            <p class="text-muted"><i
                                                    class="fas font-sm fa-volume-up align-middle text-primary me-1"></i>
                                                Bass</p>
                                            <p class="text-muted"><i
                                                    class="fas font-sm fa-cog align-middle text-primary me-1"></i>
                                                Warranty : 1 Year</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="product-color">
                                    <h6>Color :</h6>
                                    <a href="javascript: void(0);" class="active">
                                        <div class="product-color-item border rounded">
                                            <img src="<%= productImgs[0].src %>" alt="color" class="avatar-md">
                                        </div>
                                        <p>Black</p>
                                    </a>
                                    <a href="javascript: void(0);">
                                        <div class="product-color-item border rounded">
                                            <img src="<%= productImgs[0].src %>" alt="color" class="avatar-md">
                                        </div>
                                        <p>Blue</p>
                                    </a>
                                    <a href="javascript: void(0);">
                                        <div class="product-color-item border rounded">
                                            <img src="<%= productImgs[0].src %>" alt="color" class="avatar-md">
                                        </div>
                                        <p>Gray</p>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- whole details -->
                <div class="mt-3">
                    <h5 class="mb-3">Specifications :</h5>
                    <div class="table-responsive">
                        <table class="table mb-0 table-bordered">
                            <tbody>
                                <tr>
                                    <th scope="row" style="width: 250px;">Category</th>
                                    <td>Headphone</td>
                                </tr>
                                <tr>
                                    <th scope="row">Brand</th>
                                    <td>JBL</td>
                                </tr>
                                <tr>
                                    <th scope="row">Color</th>
                                    <td>Black</td>
                                </tr>
                                <tr>
                                    <th scope="row">Connectivity</th>
                                    <td>Bluetooth</td>
                                </tr>
                                <tr>
                                    <th scope="row">Warranty Summary</th>
