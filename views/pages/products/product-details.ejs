<% 

    let productImgs = [
        {
            id:1,
            src: "https://themesbrand.com/skote-django/layouts/assets/images/product/img-7.png"
        },
        {
            id:2,
            src: "https://themesbrand.com/skote-django/layouts/assets/images/product/img-8.png"
        },
        {
            id:3,
            src: "https://themesbrand.com/skote-django/layouts/assets/images/product/img-7.png"
        },
        {
            id:4,
            src: "https://themesbrand.com/skote-django/layouts/assets/images/product/img-8.png"
        }
