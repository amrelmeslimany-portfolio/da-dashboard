                </div>
                <!-- Chat Input -->
                <div class="p-3 chat-input-wrap border-top">
                    <div class="row g-1">
                        <div class="col">
                            <div class="position-relative">
                                <input type="text" class="form-control bg-light rounded-pill chat-input"
                                    placeholder="Enter Message...">
                                <div class="chat-input-links">
                                    <ul class="list-inline mb-0 position-absolute top-50 translate-middle-y">
                                        <li class="list-inline-item">
                                            <a href="javascript: void(0);" title="Emoji"><i
                                                    class="fas fa-smile"></i></a>
